{
    "name": "flowy/core",
    "description": "Flowy - A PHP Workflow Engine",
    "type": "library",
    "homepage": "https://github.com/iammerus/flowy",
    "require": {
        "php": ">=8.1",
        "doctrine/orm": "^3.3",
        "doctrine/dbal": "^4.2",
        "symfony/cache": "^7.2",
        "ramsey/uuid": "^4.7",
        "psr/event-dispatcher": "^1.0",
        "psr/container": "^2.0",
        "symfony/event-dispatcher": "^7.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "iammerus",
            "email": "him@mups.co.zw"
        }
    ],
    "autoload": {
        "psr-4": {
            "Flowy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flowy\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1"
